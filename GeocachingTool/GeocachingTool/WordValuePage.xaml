<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeocachingTool.WordValuePage">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Woordwaarde" Style="{x:DynamicResource h1}"/>
            <Entry x:Name="inputEntry" Placeholder="Woord..." TextChanged="inputEntry_TextChanged"/>
            <Label x:Name="answerLabel">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="De woordwaarde is "/>
                        <Span Text="0" FontAttributes="Bold"/>
                        <Span Text=". Doorgeteld is dat "/>
                        <Span Text="0" FontAttributes="Bold"/>
                        <Span Text="."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>