<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeocachingTool.MainPage"
             xmlns:markupExtensions="clr-namespace:GeocachingTool.MarkupExtensions"
             xmlns:resource="clr-namespace:GeocachingTool.Resources"
             Padding="0">

    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Image Grid.Column="0" Grid.Row="0" Source="{markupExtensions:EmbeddedImage ResourceId=GeocachingTool.Assets.Images.banner.png}" Aspect="AspectFill"/>
                <Label Grid.Column="0" Grid.Row="0" Text="{x:Static resource:AppResources.mainPageWelcome}" FontSize="25" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="{x:DynamicResource SecondaryTextColor}" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            </Grid>

            <StackLayout Padding="15, 5">
                <Label Text="{Static resource:AppResources.mainPageHeader}" Style="{x:DynamicResource h1}"/>
                <Label Text="{Static resource:AppResources.mainPageDescription}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
